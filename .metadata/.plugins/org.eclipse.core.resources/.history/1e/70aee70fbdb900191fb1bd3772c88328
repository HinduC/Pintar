package prog;

public class pat5 {

	public static void main(String[] args) 
	{
		int num=4;
		int n=1;
		for(int i=1;i<num;i++)
		{
			for(int j=1 ; j<num ; j++)
			{
				if(i>=j||i+j<n-1)
				{
					System.out.print(i);
					
				}
				else
				System.out.print(" ");
			}
			n=n+i;
			System.out.println(" ");
		}
	}
}
